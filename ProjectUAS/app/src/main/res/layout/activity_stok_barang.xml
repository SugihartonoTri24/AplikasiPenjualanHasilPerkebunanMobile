<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- CardView as container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Form Input Stok Barang"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp" />

                <!-- ID Barang -->
                <EditText
                    android:id="@+id/etIDBarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ID Barang"
                    android:backgroundTint="#BDBDBD"
                    android:inputType="text"
                    android:padding="10dp"
                    android:layout_marginBottom="12dp" />

                <!-- Nama Barang -->
                <EditText
                    android:id="@+id/etNamaBarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Barang"
                    android:backgroundTint="#BDBDBD"
                    android:inputType="text"
                    android:padding="10dp"
                    android:layout_marginBottom="12dp" />

                <!-- Jumlah -->
                <EditText
                    android:id="@+id/etJumlah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jumlah"
                    android:backgroundTint="#BDBDBD"
                    android:inputType="number"
                    android:padding="10dp"
                    android:layout_marginBottom="12dp" />

                <!-- Harga Satuan -->
                <EditText
                    android:id="@+id/etHargaSatuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Harga Satuan"
                    android:backgroundTint="#BDBDBD"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:layout_marginBottom="12dp" />

                <!-- Submit Button -->
                <Button
                    android:id="@+id/btnTambahStok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tambah Stok Barang"
                    android:backgroundTint="#3F51B5"
                    android:textColor="@android:color/white"
                    android:padding="10dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>